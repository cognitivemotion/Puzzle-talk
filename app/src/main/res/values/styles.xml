<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/escapepod_grey_dark</item>
        <item name="colorPrimaryDark">@color/escapepod_grey_darker</item>
        <item name="colorAccent">@color/escapepod_red</item>

        <!-- List divider -->
        <item name="android:listDivider">@drawable/list_divider</item>

        <!-- Show white status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Default window background used for resizing on v24) -->
        <item name="android:windowBackgroundFallback">@color/escapepod_grey_darker</item>

        <!-- Colors used by playback seek bar -->
        <!-- <item name="android:colorControlActivated"></item> -->
        <!-- <item name="android:colorControlNormal"></item> -->

    </style>



    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorOnPrimary">@color/toolbar_text</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>


</resources>